{
  "name": "Scale (Z-Score)",
  "description": "Scales the data by subtracting the mean and dividing by the Standard Deviation.",
  "tags": [
    "preprocessing",
    "transformation"
  ],
  "authors": [
    "tercen"
  ],
  "urls": [
    "https://github.com/tercen/scale_operator"
  ],
  "properties": [
    {
      "kind": "BooleanProperty",
      "name": "scale",
      "defaultValue": true,
      "description": "If scale is TRUE then scaling is done by dividing the (centered) row of x by their standard deviations if center is TRUE, and the root mean square otherwise. If scale is FALSE, no scaling is done."
    },
    {
      "kind": "BooleanProperty",
      "name": "center",
      "defaultValue": true,
      "description": "If center is TRUE then centering is done by subtracting the row means (omitting NAs) of x from their corresponding columns, and if center is FALSE, no centering is done."
    }
  ],
  "operatorSpec": {
    "kind": "OperatorSpec",
    "ontologyUri": "https://tercen.com/_ontology/tercen",
    "ontologyVersion": "0.0.1",
    "inputSpecs": [
      {
          "kind": "CrosstabSpec",
          "metaFactors": [
              {
                  "kind": "MetaFactor",
                  "name": "Channel",
                  "type": "",
                  "description": "The channel identifiers",
                  "ontologyMapping": "varaible",
                  "crosstabMapping": "column",
                  "cardinality": "1..n",
                  "factors": []
              },
              {
                  "kind": "MetaFactor",
                  "name": "events",
                  "type": "",
                  "description": "the observations",
                  "ontologyMapping": "observation",
                  "crosstabMapping": "row",
                  "cardinality": "1..n",
                  "factors": []
              }
          ],
          "axis": [
              {
                  "kind": "AxisSpec",
                  "metaFactors": [
                      {
                          "kind": "MetaFactor",
                          "name": "data",
                          "type": "numeric",
                          "description": "the measurements",
                          "ontologyMapping": "measurement",
                          "crosstabMapping": "y",
                          "cardinality": "1",
                          "factors": []
                      }
                  ]
              }
          ]
      }
  ]
  }
}